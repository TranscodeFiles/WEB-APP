{% trans_default_domain 'FOSUserBundle' %}


    <div class="row">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Mon profil</h3>
            </div>
            <div class="panel-body">
                <table class="table">
                   <tr>
                       <th>Username</th>
                        <td>{{ user.username }}</td>
                   </tr>
                    <tr>
                        <th>email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Temps de transcode</th>
                        <td>{{ app.user.transcodetime|date("d") ~ " jours " ~ app.user.transcodetime|date("G") ~ " heures " ~ app.user.transcodetime|date("i") ~ " minutes " }} </td>
                    </tr>


                </table>
                <a class="btn btn-primary pull-right" href="{{ path('fos_user_profile_edit') }}">Modifier</a>

            </div>
        </div>
    </div>


