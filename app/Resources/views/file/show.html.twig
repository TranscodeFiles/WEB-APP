{% extends 'base.html.twig' %}

{% block body %}
    <h1>File</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ file.name }}</td>
            </tr>
            <tr>
                <th>Content type</th>
                <td>{{ file.contentType }}</td>
            </tr>
            <tr>
                <th>Content length</th>
                <td>{{ file.contentLength }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ file.status }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('files_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('files_download', { 'id': file.id }) }}">Download</a>
        </li>
        <li>
            <a href="{{ path('files_transcode', { 'id': file.id }) }}">Transcode</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

    {% include 'convertedFile/list.html.twig' with {'transcodedFiles': file.convertedFiles} %}

{% endblock %}
