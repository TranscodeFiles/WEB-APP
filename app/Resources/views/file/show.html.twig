{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>File</h1>
        </div>
        <div class="row">
            <div class="control-group">
                <a href="{{ path('files_index') }}" class="btn btn-primary">Back to the list</a>

                <a href="{{ path('files_download', { 'id': file.id }) }}" class="btn btn-primary">Download</a>

                <a href="{{ path('files_transcode', { 'id': file.id }) }}" class="btn btn-primary">Transcode</a>

                <div class="pull-right">
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete"  class="btn btn-danger" >
                    {{ form_end(delete_form) }}
                </div>

            </div>


        </div>
        <div class="col-xs-12" style="height:50px;"></div>




        <table class="table">
            <tbody>
            <tr>
                <th>Name</th>
                <td>{{ file.name }}</td>
            </tr>
            <tr>
                <th>Content type</th>
                <td>{{ file.contentType }}</td>
            </tr>
            <tr>
                <th>Content length</th>
                <td>{{ file.contentLength|bytes }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ file.duration|date("G:i:s") }}m</td>
            </tr>

            <tr>
                <th>Status</th>
                <td>{{ file.status }}</td>
            </tr>


            </tbody>
        </table>


    </div>


    {% include 'convertedFile/list.html.twig' with {'transcodedFiles': file.convertedFiles} %}

{% endblock %}
{% block javascript_footer %}
    <script src="{{ asset('js/updatefilestatus.js') }}"></script>
{% endblock %}
